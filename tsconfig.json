{
    "extends": "@tsconfig/recommended",
    "compilerOptions": {
      "outDir": "build",
      "lib": [
        "ES2021",
        "ES2022.Object",
        "DOM"
      ],
      "target": "ES2021",
      "module": "nodenext",
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "rootDir": ".",
      "declaration": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedParameters": true,
      "useDefineForClassFields": true,
      "strictPropertyInitialization": false
    },
    "exclude": [
      "node_modules/",
      "dist/",
      "build/"
    ],
    "include": [
      "./src",
      "./__tests__"
    ]
}